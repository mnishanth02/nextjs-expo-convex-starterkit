{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "root": false,
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noNestedComponentDefinitions": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "asNeeded",
      "trailingCommas": "es5",
      "arrowParentheses": "always"
    }
  }
}
