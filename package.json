{
  "name": "next-expo-convex-starter",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "upgrade:all": "pnpm -r up --latest",
    "prepare": "husky",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @repo/backend dev",
    "dev:setup": "turbo -F @repo/backend dev:setup"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "latest"
  },
  "packageManager": "pnpm@10.18.2",
  "engines": {
    "node": ">=20"
  },
  "resolutions": {
    "react": "19.1.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  },
  "dependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --files-ignore-unknown=true --no-errors-on-unmatched"
    ]
  }
}
